<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comcesar1287.github.www.collie.view.SignWithActivity"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <RelativeLayout
            android:id="@+id/son_sign_with_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">

            <ImageView
                android:id="@+id/son_sign_with_logo"
                android:layout_width="75dp"
                android:layout_height="55dp"
                android:src="@drawable/collie_image_logo"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/son_sign_with_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/son_sign_with_logo"
                android:text="@string/son_sign_with_btn_title"
                android:textSize="19sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/son_sign_with_image_triangle"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/collie_image_triangle"
            android:layout_below="@id/son_sign_with_header"
            android:layout_marginTop="-5dp"
            android:layout_centerHorizontal="true"
            android:tint="@color/colorPrimaryDark"/>

        <RelativeLayout
            android:id="@+id/register_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:gravity="center"
            android:focusableInTouchMode="true"
            android:layout_below="@id/sign_with_image_triangle">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/son_sign_with_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextLabel"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/son_sign_with_edit_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/son_sign_with_phone"
                    android:inputType="textEmailAddress"/>

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/son_sign_with_btn_send"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:layout_below="@id/son_sign_with_phone"
                android:layout_centerHorizontal="true"
                android:text="@string/son_sign_with_btn_send"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@drawable/collie_button_rounded"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>