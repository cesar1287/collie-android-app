<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comcesar1287.github.www.collie.view.ScheduleActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="25dp">
        <TextView
            android:id="@+id/maps_address_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/maps_address_title"
            android:textSize="19sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/maps_actual_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/maps_address_title"
            android:text="Rua 74, montese, fortaleza"
            android:textSize="17sp"/>


    </RelativeLayout>

    <fragment
        android:id="@+id/map"
        android:layout_marginTop="100dp"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>


