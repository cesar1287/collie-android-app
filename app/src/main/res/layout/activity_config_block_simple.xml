                    <EditText
                        android:id="@+id/config_block_simple_name_task2"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:background="@drawable/collie_rounded_line"
                        android:hint="@string/config_block_simple_time_name_task"
                        android:inputType="text"
                        android:gravity="center"/>

                    <EditText
                        android:id="@+id/config_block_simple_bonus_task2"
                        android:layout_width="match_parent"
