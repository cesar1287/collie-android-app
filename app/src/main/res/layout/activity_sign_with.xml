<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comcesar1287.github.www.collie.view.SignWithActivity"
    android:background="@color/colorPrimary"
    android:paddingLeft="29dp"
    android:paddingRight="29dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/sign_with_logo"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:src="@drawable/collie_image_logo"
            android:layout_centerHorizontal="true"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/sign_with_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_with_logo"
            android:theme="@style/TextLabel"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/sign_with_edit_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/sign_with_email"
                android:inputType="textEmailAddress"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/sign_with_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel"
            android:layout_below="@id/sign_with_email"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/sign_with_edit_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/sign_with_passord"
                android:inputType="numberPassword"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/sign_with_btn_send"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_below="@id/sign_with_password"
            android:layout_centerHorizontal="true"
            android:text="@string/sign_with_btn_send"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/collie_button_rounded"/>

    </RelativeLayout>

    <Button
        android:id="@+id/sign_with_btn_recover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:text="Esqueci minha senha"
        android:textColor="@color/white"
        android:background="@null"/>

</RelativeLayout>
